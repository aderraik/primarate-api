<?xml version="1.0" encoding="UTF-8"?>

<!-- Responsible for creating the suppported central bank beans -->

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="bcbCentralBank" class="com.visiansystems.model.CentralBank">
        <property name="id" value="${bank.bcb.id}"/>
        <property name="name" value="${bank.bcb.name}"/>
        <property name="defaultCurrencyCode" value="${bank.bcb.currencyCode}"/>
    </bean>

    <bean id="ecbCentralBank" class="com.visiansystems.model.CentralBank">
        <property name="id" value="${bank.ecb.id}"/>
        <property name="name" value="${bank.ecb.name}"/>
        <property name="defaultCurrencyCode" value="${bank.ecb.currencyCode}"/>
    </bean>
</beans>
